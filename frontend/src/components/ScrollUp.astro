<p
  id="scroll-to-top"
  aria-label="Menu"
  class="fixed bottom-0 right-0 m-6 -rotate-45 z-10 cursor-pointer p-4 bg-white border border-[#0C0F03] rounded-full w-fit shadow-[2px_2px_0px_#0C0F03] hover:shadow-[4px_4px_0px_#0C0F03] hover:-translate-y-1 hover:bg-[#C8F031] opacity-0 pointer-events-none !duration-100"
>
  <svg
    width="14"
    height="14"
    viewBox="0 0 14 14"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      d="M1.51465 1.51416H12.4861M12.4861 1.51416V12.4856M12.4861 1.51416L1.51465 12.4856"
      stroke="#0C0F03"
      stroke-width="1.5"
      stroke-linecap="round"
      stroke-linejoin="round"></path>
  </svg>
</p>

<script>
  // Get the button element
  const scrollToTopButton = document.getElementById("scroll-to-top");

  // Add scroll event listener
  window.addEventListener("scroll", () => {
    // Show button when user scrolls down 300px from the top
    if (window.scrollY > 300) {
      // Add visible classes, remove invisible classes
      scrollToTopButton?.classList.remove("opacity-0", "pointer-events-none");
      scrollToTopButton?.classList.add("opacity-100", "pointer-events-auto");
    } else {
      // Add invisible classes, remove visible classes
      scrollToTopButton?.classList.add("opacity-0", "pointer-events-none");
      scrollToTopButton?.classList.remove("opacity-100", "pointer-events-auto");
    }
  });

  // Add click event to scroll back to top
  scrollToTopButton?.addEventListener("click", () => {
    // Smooth scroll to top
    window.scrollTo({
      top: 0,
      behavior: "smooth",
    });
  });
</script>
