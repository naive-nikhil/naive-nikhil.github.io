<style>
  /* Social Icons Styling */
  .social-icon {
    position: absolute;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    border: 2px solid #0c0f03;
    box-shadow: 2px 2px 0px #0c0f03;
    opacity: 0;
    transform: scale(0);
    transition:
      transform 0.4s ease-in-out,
      opacity 0.4s ease-in-out;
  }

  /* Show on Hover (Desktop) */
  .group:hover .social-icon {
    opacity: 1;
    transform: scale(1);
  }

  /* Show on Click (Mobile) */
  .clicked .social-icon {
    opacity: 1 !important;
    transform: scale(1) !important;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const profileContainer = document.getElementById("profile-container");
    const socialIcons = document.getElementById("social-icons");

    profileContainer.addEventListener("click", function () {
      // Toggle visibility on mobile
      socialIcons.classList.toggle("clicked");
    });

    // Optional: Close icons when clicking outside
    document.addEventListener("click", function (event) {
      if (
        !profileContainer.contains(event.target) &&
        !socialIcons.contains(event.target)
      ) {
        socialIcons.classList.remove("clicked");
      }
    });
  });
</script>
